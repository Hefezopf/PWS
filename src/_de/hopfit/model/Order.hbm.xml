<hibernate-mapping>
    <class name="de.hopfit.model.Order" table="Orders">
        <id name="order_id" column="order_id">
            <generator class="native"/>
        </id>
        <property name="customername" column="customername"/>
        <property name="partner_id" column="partner_id"/>
        <property name="date" column="date"/>
        <property name="amount" column="amount"/>
        <property name="str" column="str"/>
        <property name="plz" column="plz"/>
        <property name="ort" column="ort"/>
        <property name="email" column="email"/>
        <property name="tel" column="tel"/>
        <property name="bemerkung" column="bemerkung"/>
		<property name="art" column="art"/>
        <property name="payed_date" column="payed_date"/>
        <property name="confirmed_date" column="confirmed_date"/>
 				
